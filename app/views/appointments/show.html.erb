<div class="container">
  <!-- Appointment Details -->
  <div class="mb-4 border p-3">
    <h1>Appointment Details</h1>
    <div class="row">
      <div class="col-md-6">
        <p><strong>Company:</strong> <%= @appointment.company.name %></p>
        <p><strong>Date:</strong> <%= @appointment.appointment_time.strftime("%Y-%m-%d %H:%M:%S") %></p>
        <p><strong>Status:</strong> <%= @appointment.status %></p>
        <p><strong>Duration:</strong> <%= @appointment.duration %> minutes</p>
        <p><strong>Price:</strong> <%= @appointment.price %></p>
      </div>
    </div>
    <!-- Action buttons -->
    <div class="row mt-3">
      <div class="col-md-6">
        <%= link_to "Edit", edit_appointment_path(@appointment), class: "btn btn-primary me-2" %>
        <%= link_to "Back Home", root_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

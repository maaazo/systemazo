<div id="<%= dom_id(employment_application_form) %>" class="mb-4 p-3">
  <div class="row">
      <div class="col">
        <strong>Company:</strong> <%= employment_application_form.company.name %>
      </div>
      <div class="col">
        <strong>User:</strong> <%= employment_application_form.user.email %>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <strong>Preferred name:</strong> <%= employment_application_form.preferred_name %>
      </div>
      <div class="col">
        <strong>Gender:</strong> <%= employment_application_form.gender %>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <strong>Alternate phone number:</strong> <%= employment_application_form.alternate_phone_number %>
      </div>
      <div class="col">
        <strong>Additional info:</strong> <%= employment_application_form.additional_info %>
      </div>
    </div>
</div>

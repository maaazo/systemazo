<div class="container">
  <div class="mb-3">
    <h1 class="d-inline">Employment Application Form - #<%= @employment_application_form.id %></h1>

    <div class="float-end">
      <%= link_to "Back to Company", company_path(@employment_application_form.company_id), class: "btn btn-secondary ms-2" %>
    </div>
  </div>

  <div class="mb-4 border p-3">
    <%= render @employment_application_form %>
  </div>

  <div class="row">
    <div class="mb-4">
      <%= link_to "Edit Form", edit_employment_application_form_path(@employment_application_form), class: "btn btn-primary me-2" %>
    </div>
    <div class="col-md-10 text-left">
      <%= button_to "Delete Form", @employment_application_form, method: :delete, data: { turbo_confirm: "Are you sure you want to delete the form?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
